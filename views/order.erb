<h2> Оформление покупки </h2>

<form action="/order" method="post">
    <div class="form-group">
        <input name="order[name]" type="text" class="form-control" placeholder="Имя" value="<%=@ord.name%>">
    </div>

    <div class="form-group">
        <input name="order[address]" type="text" class="form-control" placeholder="Адрес" value="<%=@ord.address%>">
    </div>

    <div class="form-group">
        <input name="order[tel]" type="text" class="form-control" placeholder="Телефон" value="<%=@ord.tel%>">
    </div>

    <button type="submit" class="btn btn-primary">Оформить заказ</button>

</form>
