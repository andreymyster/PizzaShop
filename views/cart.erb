<h3>Список покупок</h3>


<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Наименование</th>
        <th>Цена</th>
        <th>Количество</th>
    </tr>

    <% sum = 0 %>
    <% @order.each do |key, value|%>
        <% @products.each do |product| %>
            <% if product.id == key %>
                <tr>
                    <td> <%= product.id %> </td>
                    <td> <%= product.title %> </td>
                    <td> <%= product.price %> </td>
                    <td> <%= value %> </td>
                    <% sum += product.price * value %>
                </tr>
            <% end %>
        <% end %>
    <% end %>
</table>

<br>

<h4> Сумма: <%= sum %> </h4>

<br>

<a class="btn btn-info btn-lg" href="/order" role="button">Оформить</a>
