<h3>Список заказов</h3>


<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Время заказа</th>
        <th>Имя</th>
        <th>Адрес</th>
        <th>Состав заказа</th>
        <th>Сумма</th>
    </tr>

    <% @OL.each do |item|%>
        <tr>
            <td> <%= item.id %> </td>
            <td> <%= item.created_at %> </td>
            <td> <%= item.name %> </td>
            <td> <%= item.address %> </td>
            <td> <%= item.list_order %> </td>
            <td> <%= item.sum %> </td>                 
        </tr>
    <% end %>
</table>
